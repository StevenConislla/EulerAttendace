<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plug.eulerattendance">
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".Configuracion"
        android:allowBackup="true"
        android:icon="@mipmap/ic_euler"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_euler"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".IniciarActivity" />
        <activity android:name=".EntradaActivity" />
        <activity android:name=".SalidaActivity" />
        <activity android:name=".ListaActivity" />
        <activity android:name=".Lista2Activity"></activity>
    </application>

</manifest>